modules = ["python-3.11"]
run = "Python bot.py"

[nix]
channel = "stable-24_05"
packages = ["unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot"

[[workflows.workflow]]
name = "Telegram Bot"
author = "agent"
mode = "sequential"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python bot.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python bot.py"]

[[ports]]
localPort = 5000

[[ports]]
localPort = 8080
externalPort = 8080
